@page "/solve/{type?}"
@model BoundBoxApp.Pages.Bounds.SolveModel
@using BoundBoxApp.Model
@using BoundBoxApp.Pages.Bounds

<h2>Annotate</h2>
<div>
    <a class="btn btn-secondary p-2 mr-2" href="/solve/marking">New Image for Marking</a>
    <a class="btn btn-secondary p-2" href="/solve/category">New Image for Naming Category</a>
</div>


@if (ViewData["Project"] != null)
{
    var project = ViewData["Project"] as Project;

    <h3>Title: @project.Title</h3>
    <p>Category: @project.Category</p>
    <br />

    @(await Html.RenderComponentAsync<AnnotationCanvas>(RenderMode.Server, new { ImageSrc = project.Src }))

    <form method="post" asp-route-returnUrl="/solove">
        <input asp-for="Input.ProjectId" type="hidden" value="@project.Id" />
        <button type="submit" class="btn btn-primary my-2">Submit Annotation</button>
    </form>
}
@if (ViewData["Project"] == null && Model.IsFetched)
{ 
    <p>No projects found</p>
}

