@page "/project/edit/{projectId}"
@model BoundBoxApp.Pages.Project.ProjectEditModel
@using BoundBoxApp.Pages.Project


<h2>Edit Project</h2>
@if (Model.Input != null)
{
<form method="post" enctype="multipart/form-data" class="mb-2">

    <div class="row">
        <div class="col-md-4 col-12">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Title"></label>
                <input asp-for="Input.Title" class="form-control" />
                <span asp-validation-for="Input.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Categories"></label>
                <input asp-for="Input.Categories" class="form-control" />
                <span asp-validation-for="Input.Categories" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.IsForObjectDetection"> Check for Object Detection or leave unchecked for Classification</label>
                <input asp-for="Input.IsForObjectDetection" class="form-control" style="max-width:40px" />
                <span asp-validation-for="Input.IsForObjectDetection" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Images"></label>
                <input asp-for="Input.Images" />
                <span asp-validation-for="Input.Images" class="text-danger"></span>
            </div>

        </div>

    </div>
    @(await Html.RenderComponentAsync<ImageEdit>(RenderMode.Server, new { Images = Model.Project.Images.ToList() }))

    <button type="submit" class="btn btn-primary">Update Project</button>
</form>

}
@if (Model.Input == null)
{
    <p>No project found.</p>
}