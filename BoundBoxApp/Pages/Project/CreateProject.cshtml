@page "/project/new"
@model BoundBoxApp.Pages.Project.CreateProjectModel

<h2>Create Project</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Title"></label>
                <input asp-for="Input.Title" class="form-control" />
                <span asp-validation-for="Input.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Category"></label>
                <input asp-for="Input.Category" class="form-control" />
                <span asp-validation-for="Input.Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.IsForAnnotation"></label>
                <input asp-for="Input.IsForAnnotation" class="form-control" />
                <span asp-validation-for="Input.IsForAnnotation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Image"></label>
                <input asp-for="Input.Image" class="form-control" />
                <span asp-validation-for="Input.Image" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Create New Project</button>
        </form>
    </div>
</div>