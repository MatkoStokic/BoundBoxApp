@page "/project/new"
@model BoundBoxApp.Pages.Project.CreateProjectModel

<h2>Create Project</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Title"></label>
                <input asp-for="Input.Title" class="form-control" />
                <span asp-validation-for="Input.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Categories"></label>
                <input asp-for="Input.Categories" class="form-control" />
                <span asp-validation-for="Input.Categories" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.IsForObjectDetection"> Check for Object Detection or leave unchecked for Classification</label>
                <input asp-for="Input.IsForObjectDetection" class="form-control" style="max-width:40px" />
                <span asp-validation-for="Input.IsForObjectDetection" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Image"></label>
                <input asp-for="Input.Image" class="form-control-file" />
                <span asp-validation-for="Input.Image" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Create New Project</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}