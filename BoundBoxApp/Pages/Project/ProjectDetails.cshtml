@page "/project/{projectId}"
@model BoundBoxApp.ProjectDetailsModel
@using BoundBoxApp.Pages.Project

<h2>Project</h2>
@if (Model.Input != null)
{
    <div class="row">
        <div class="col-md-4">
            <form method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Title"></label>
                    <input asp-for="Input.Title" class="form-control" />
                    <span asp-validation-for="Input.Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Categories"></label>
                    <input asp-for="Input.Categories" class="form-control" />
                    <span asp-validation-for="Input.Categories" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.IsForObjectDetection"> Check for Object Detection or leave unchecked for Classification</label>
                    <input asp-for="Input.IsForObjectDetection" class="form-control" style="max-width:40px" />
                    <span asp-validation-for="Input.IsForObjectDetection" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Image"></label>
                    <input asp-for="Input.Image" />
                    <span asp-validation-for="Input.Image" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Update Project</button>
            </form>
        </div>
    </div>
    <br />
    <hr />
    @if (Model.Project.Images.Count > 0)
    {
        @(await Html.RenderComponentAsync<AnnotationPreview>(RenderMode.Server, new { Project = Model.Project }))
    }
    else
    {
        <div class="w-100 mb-2">
            <img src="@Model.Project.Images.ToList()[0].Src" class="w-100" />
        </div>
    }
}
@if (Model.Input == null)
{
    <p>No project found.</p>
}
